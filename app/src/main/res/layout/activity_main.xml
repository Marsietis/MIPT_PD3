<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:text="@string/_0"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/mc"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/mr"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/ms"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/m_plus"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/m_minus"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/back"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/ce"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/c"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/plusminus"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/root"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/_7"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/_8"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/_9"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/divide"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/percent"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/_4"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/_5"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/_6"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/multiply"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/_1_x"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Add your buttons in the first row -->
                    <!-- Button 1 -->
                    <Button
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="@string/_1"
                        android:textColor="@color/black"
                        app:cornerRadius="5dp" />

                    <!-- Button 2 -->
                    <Button
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="@string/_2"
                        android:textColor="@color/black"
                        app:cornerRadius="5dp" />

                    <!-- Button 3 -->
                    <Button
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="@string/_3"
                        android:textColor="@color/black"
                        app:cornerRadius="5dp" />

                    <!-- Button 4 -->
                    <Button
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="@string/minus"
                        android:textColor="@color/black"
                        app:cornerRadius="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Add your buttons in the second row -->
                    <!-- Button 5 -->
                    <Button
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="2"
                        android:text="@string/_0"
                        android:textColor="@color/black"
                        app:cornerRadius="5dp" />

                    <!-- Button 6 -->
                    <Button
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="@string/dot"
                        android:textColor="@color/black"
                        app:cornerRadius="5dp" />

                    <!-- Button 7 -->
                    <Button
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="@string/plus"
                        android:textColor="@color/black"
                        app:cornerRadius="5dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Absolute positioning for the large button -->
            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="72dp"
                android:layout_height="162dp"
                android:layout_gravity="top|center_horizontal"
                android:text="@string/equal"
                android:textColor="@color/black"
                android:translationX="165dp"
                app:cornerRadius="5dp" />

        </FrameLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
